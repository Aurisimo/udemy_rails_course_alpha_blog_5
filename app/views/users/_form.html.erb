<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user %>
      <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |form|  %>
        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-form-label", placeholder: "Enter a username" %><br>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label", placeholder: "Enter your email address" %><br>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label", placeholder: "Choose a password" %><br>
          <div class="col-10">
            <%= form.password_field :password, rows: 10, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= form.submit "Sign up!", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info" %>
    </div>
  </div>
</div>